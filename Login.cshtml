
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script>
        $(document).ready(function () {
            $(".text-danger").hide();
            $("#btn_Login").click(function ()
            {
                if ($("#LoginID").val().length == 0)
                {
                    $("#lbl_login_error").show();
                    $("#LoginID").focus();
                    return false;
                }
                else
                {
                    $("#lbl_login_error").hide();
                }
                if ($("#Password").val().length == 0)
                {
                    $("#lbl_password_error").show();
                    $("#Password").focus();
                    return false;
                }
                else
                {
                    $("#lbl_password_error").hide();
                }

            });
        });
    </script>


</head>
<body>
    <div align="center"> 
        <form method="post" action="/Bank/Login" class="container" style="text-align:left;width:30%">
            <div class="form-group">
                <label for="LoginID" class="form-control-static">Login ID</label>
                <input type="text" name="LoginID" id="LoginID" class="form-control" />
                <label for="LoginID" class="text-danger" id="lbl_login_error">*</label>
            </div>
            <div class="form-group">
                <label for="Password" class="form-control-static">Password</label>
                <input type="text" name="Password" id="Password" class="form-control" />
                <label for="Password" class="text-danger" id="lbl_password_error">*</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" id="btn_Login" class="btn-danger" />
                @Html.ActionLink("NewUser", "NewUser", "Bank")
                <br />
                <label class="label-danger">@ViewBag.msg</label>
            </div>
        </form>
</div>
</body>
</html>
